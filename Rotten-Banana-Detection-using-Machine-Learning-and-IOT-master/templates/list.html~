    <script>
        angular.module('myApp', [])
            .controller('HomeCtrl', function($scope, $http) {
			
				$scope.info = {};
				$scope.asdfg="Rajesh Kumar";
				
				$scope.showAdd = true;


		$scope.last = function() {
				$http({
						method: 'GET',
						url: '/showData',
					}).then(function(response) {
						d=response["data"];	
						$scope.dd=d["base64"];
						$scope.status=parseInt(d["status"]);
						if($scope.status == 1)
						{ alert("Bananas Getting Rotten");}

						console.log(response);
						$scope.info = {}
					}, function(error) {
						console.log(error);
					})
			}		

				$scope.lastFive = function(){	
					
					$http({
						method: 'GET',
						url: '/lastFive',
					}).then(function(response) {
						$scope.f=response["data"];

						 $scope.keys = Object.keys($scope.f);
						console.log($scope.f);
						console.log($scope.f);
						//console.log( "f['0']['status'" ,  f['0']['status']);
						var len = $scope.keys.length;

		
						console.log(len);

						//print 
//					$scope.range = [];		
//					for(var i=0;i<len;i++) { range.push(f[i.toString()])	}
						

						$scope.info = {}
					}, function(error) {
						console.log(error);
					})
				}
				
	})
    </script>














